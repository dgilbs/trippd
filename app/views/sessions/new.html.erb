<%= form_tag sessions_path do %>

 <div class="field">
   <p><%= label_tag :email %>
   <%= text_field_tag :email, params[:email] %></p> 
 </div> 

 <div class="field">
   <p><%= label_tag :password %>
   <%= password_field_tag :password %></p> 
 </div>

 <div class="actions"><%= submit_tag "Log In" %></div>
 
<% end %>