
<p>Name: <%=@user.first_name%> <%=@user.last_name%></p>

<p># of Upcoming Trips: <%=@user.upcoming_trips.count%></p>

<p># of Past Trips: <%=@user.past_trips.count%></p>

<h3>My Trip (Click to change your trip!)</h3>
<% @user.trips.each do |trip| %>
  <button class="trip-btn"><%= link_to trip.title, change_current_trip_path(trip.id) %></button>
<% end %>


<% if !@user.cities_visited.nil? %>
<h3>Cities Visited</h3>
<ul>
<% @user.cities_visited.each do |city|%>
<li><%=city%></li>
<%end%>
</ul>
<%end%>

<% if !@user.countries_visited.nil? %>
<h3>Countries Visited</h3>
<ul>
<% @user.countries_visited.each do |country|%>
<li><%=country%></li>
<%end%>
</ul>
<%end%>





