<h2>ahh... the lovely <%= @destination.city %> 
<form action="/destinations/<%= @destination.id%>/add_destination" method="GET">
 <button type="submit" class='add-destination-btn'> + </button>
</form>
</h2> 

<form id="trip-activities">
<div class="activities-by-destination">
  <h3>Restaurants</h3>
    <ul>
      <% @restaurants.each do |restaurant| %>
        <li> <input type="checkbox" value="<%=restaurant.id%>"> <%= link_to restaurant.name, restaurant.link %></li>
      <% end %>
    </ul>
</div>

<div class="activities-by-destination">
  <h3>Music</h3>
    <ul>
      <% @music_activities.each do |music| %>
        <li> <input type="checkbox" value="<%=music.id%>"> <%= link_to music.name, music.link %></li>
      <% end %>
    </ul>
</div>

<div class="activities-by-destination">
  <h3>Active</h3>
    <ul>
      <% @active_activities.each do |active| %>
        <li> <input type="checkbox" value="<%=active.id%>"> <%= link_to active.name, active.link %></li>
      <% end %>
    </ul>
</div>

<div class="activities-by-destination">
  <h3>Spa/Fitness</h3>
    <ul>
      <% @spa_fitness_activities.each do |spa_fitness| %>
        <li> <input type="checkbox" value="<%=spa_fitness.id%>"> <%= link_to spa_fitness.name, spa_fitness.link %></li>
      <% end %>
    </ul>
</div>

<div class="activities-by-destination">
  <h3>Shopping</h3>
    <ul>
      <% @shopping_activities.each do |shopping| %>
        <li> <input type="checkbox" value="<%=shopping.id%>"> <%= link_to shopping.name, shopping.link %></li>
      <% end %>
    </ul>
</div><br>
<input type="submit" value="Add to Trip">
</form>

